<section
  id="Request an Appoinment"
  class="flex justify-center items-center bg-(--secondary)"
>
  <div class="container py-12 px-4">
    <h2 class="text-center pb-12 text-(--primary)">Request an Appoinment</h2>
    <div class="flex flex-nowrap justify-center gap-x-2.5">
      <form action="" method="post" class="w-1/2">
        <div class="flex gap-2 pb-3">
          <label for="Firstname" class="text-(--primary) inline-block w-1/2">
            <input
              type="text"
              name="name"
              id="name"
              class="p-3 w-full bg-white rounded-4xl border-0"
              placeholder="First Name"
              required
            />
          </label>
          <label for="Lastname" class="text-(--primary) inline-block w-1/2">
            <input
              type="text"
              name="name"
              id="name"
              class="border-0 p-3 w-full bg-white rounded-4xl"
              placeholder="Last Name"
              required
            />
          </label>
        </div>
        <div class="flex flex-col pb-3">
          <label for="Phone" class="text-(--primary)">
            <input
              type="tel"
              name="phone"
              id="Phone"
              class="border-0 p-3 w-full bg-white rounded-4xl"
              placeholder="Phone Number"
              required
            />
          </label>
        </div>
        <div class="flex flex-col pb-3">
          <label for="Email" class="text-(--primary)">
            <input
              type="email"
              name="email"
              id="Email"
              class="border-0 p-3 w-full bg-white rounded-4xl"
              placeholder="Email Address"
              required
            />
          </label>
        </div>
        <div class="flex flex-col pb-3">
          <label for="message" class="text-(--primary)">
            <textarea
              name="message"
              id="message"
              rows="4"
              class="border-0 p-3 w-full bg-white rounded-2xl"
              placeholder="Message"
              required></textarea>
          </label>
        </div>
        <button
          type="submit"
          class="bg-(--secondary) p-3 px-4 rounded-2xl border hover:bg-(--primary) text-black"
        >
          Submit
        </button>
      </form>
    </div>
  </div>
</section>
